    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backend",
            "output": "pong-backend",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/server/cmd/main.go",
            //"program": "server/cmd/main.go",
            "env": {},
            "args": []
        },
        {
            "name": "Web",
            "cwd": "client/pong",
            "request": "launch",
            "type": "dart",
            "args": [
                "-d",
                "chrome"
            ]
        },
        {
            "name": "pong",
            "cwd": "client/pong",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "pong (profile mode)",
            "cwd": "client/pong",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        }
    ]
}